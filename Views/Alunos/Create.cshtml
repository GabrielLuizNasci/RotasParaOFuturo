@model RotasParaOFuturo.Models.Aluno

@{
    ViewData["Title"] = "Adicionar Aluno";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Adicionar Aluno</h1>

<div class="card mx-auto shadow-sm" style="max-width: 800px;">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fas fa-user-graduate"></i> Cadastro de Aluno</h4>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Nome -->
            <div class="mb-3">
                <label asp-for="Nome" class="form-label">
                    <i class="fas fa-user"></i> Nome Completo
                </label>
                <input asp-for="Nome" class="form-control" placeholder="Digite o nome do aluno" required />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Endereço -->
            <div class="mb-3">
                <label asp-for="Endereco" class="form-label">
                    <i class="fas fa-map-marker-alt"></i> Endereço
                </label>
                <input asp-for="Endereco" class="form-control" placeholder="Digite o endereço do aluno" required />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>

            <!-- Telefone -->
            <div class="mb-3">
                <label asp-for="Telefone" class="form-label">
                    <i class="fas fa-phone-alt"></i> Telefone
                </label>
                <input asp-for="Telefone" class="form-control" placeholder="(XX) XXXXX-XXXX" type="text" required />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <!-- Sexo -->
            <div class="mb-3">
                <label asp-for="Sexo" class="form-label">
                    <i class="fas fa-venus-mars"></i> Sexo
                </label>
                @Html.DropDownListFor(
                         model => model.Sexo,
                         new SelectList(new[] { "Masculino", "Feminino", "Outro" }, Model.Sexo),
                         "Selecione o Sexo",
                         new { @class = "form-control", required = "required" })
                <span asp-validation-for="Sexo" class="text-danger"></span>
            </div>

            <!-- Botões -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-danger">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
