


@model RotasParaOFuturo.Models.Aluno

@{
    ViewData["Title"] = "Delete";
}

<div class="container my-5">
    <h1 class="text-center text-danger mb-4">Excluir Aluno</h1>

    <h3 class="text-center mb-3">Tem certeza de que deseja excluir este aluno?</h3>

    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Detalhes</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">Nascimento</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nascimento)</dd>

                <dt class="col-sm-3">Endereço</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Endereco)</dd>

                <dt class="col-sm-3">CPF</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CPF)</dd>

                <dt class="col-sm-3">RG</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RG)</dd>

                <dt class="col-sm-3">Telefone</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefone)</dd>

                <dt class="col-sm-3">Sexo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SexoFormatado)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">Deletar</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">Volta</a>
    </div>
</div>






