@model RotasParaOFuturo.Models.Aluno


@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="text-primary mb-4"><i class="bi bi-person-circle"></i> Detalhes do Aluno</h1>

<div class="container">
    <div class="row g-4">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-person-fill"></i> Nome</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Nome)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-calendar-event"></i> Nascimento</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Nascimento)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-geo-alt-fill"></i> Endereço</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Endereco)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-credit-card"></i> CPF</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.CPF)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-person-badge-fill"></i> RG</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.RG)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-telephone-fill"></i> Telefone</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Telefone)</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-gender-ambiguous"></i> Sexo</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.SexoFormatado)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success me-2">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-danger">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>