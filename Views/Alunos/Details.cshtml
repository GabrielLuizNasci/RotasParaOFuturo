

@model RotasParaOFuturo.Models.Aluno

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary mb-4"><i class="bi bi-person-lines-fill"></i> Detalhes do Aluno</h1>

<div class="container">
    <div class="row g-4">

        <!-- Nome -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-person-circle"></i> Nome</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Nome)</p>
                </div>
            </div>
        </div>

        <!-- Nascimento -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-calendar-date"></i> Data de Nascimento</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Nascimento)</p>
                </div>
            </div>
        </div>

        <!-- Endereço -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-house-door"></i> Endereço</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Endereco)</p>
                </div>
            </div>
        </div>

        <!-- CPF -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-card-id-card"></i> CPF</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.CPF)</p>
                </div>
            </div>
        </div>

        <!-- RG -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-card-text"></i> RG</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.RG)</p>
                </div>
            </div>
        </div>

        <!-- Telefone -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-phone"></i> Telefone</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.Telefone)</p>
                </div>
            </div>
        </div>

        <!-- Sexo -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-gender-ambiguous"></i> Sexo</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.SexoFormatado)</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success me-2">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-danger">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</div>


