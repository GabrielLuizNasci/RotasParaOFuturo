@model RotasParaOFuturo.Models.Aluno

@{
    ViewData["Title"] = "Editar Aluno";
}

<h1 class="mb-4 text-center"><i class="fas fa-user-edit"></i> Editar Aluno</h1>

<div class="d-flex justify-content-center">


    <div class="card shadow mb-4" style="width: 100%; max-width: 600px;">
        <div class="card-header bg-primary text-white">


            <h4 class="mb-0"><i class="fas fa-info-circle"></i> Informações do Aluno</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"><i class="fas fa-user"></i> Nome</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome" required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Nascimento" class="control-label"><i class="fas fa-calendar-alt"></i> Data de Nascimento</label>
                    <input asp-for="Nascimento" class="form-control" type="date" required />
                    <span asp-validation-for="Nascimento" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Endereco" class="control-label"><i class="fas fa-map-marker-alt"></i> Endereço</label>
                    <input asp-for="Endereco" class="form-control" placeholder="Digite o endereço" required />
                    <span asp-validation-for="Endereco" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CPF" class="control-label"><i class="fas fa-id-card"></i> CPF</label>
                    <input asp-for="CPF" class="form-control" type="text" placeholder="Digite o CPF" required />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RG" class="control-label"><i class="fas fa-id-badge"></i> RG</label>
                    <input asp-for="RG" class="form-control" placeholder="Digite o RG" required />
                    <span asp-validation-for="RG" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Telefone" class="control-label"><i class="fas fa-phone"></i> Telefone</label>
                    <input asp-for="Telefone" class="form-control" type="text" placeholder="Digite o telefone" required />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Sexo" class="control-label"><i class="fas fa-venus-mars"></i> Sexo</label>
                    @Html.DropDownList("Sexo", new SelectList(new List<SelectListItem>
                    {
                    new SelectListItem { Value = "1", Text = "Masculino" },
                    new SelectListItem { Value = "2", Text = "Feminino" },
                    new SelectListItem { Value = "3", Text = "Outro" }
                    }, "Value", "Text"), "Selecione o Sexo", new { @class = "form-control", required = "required" })
                    <span asp-validation-for="Sexo" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Salvar</button>
                    <a asp-action="Index" class="btn btn-danger"><i class="fas fa-arrow-left"></i> Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 10px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn {
        border-radius: 5px;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>