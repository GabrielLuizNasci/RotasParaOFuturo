@model RotasParaOFuturo.Models.Atividade

@{
    ViewData["Title"] = "Excluir Atividade";
}

<div class="container my-5">
    <h1 class="text-center text-danger mb-4"><i class="bi bi-trash"></i> Excluir Atividade</h1>

    <h3 class="text-center mb-3">Tem certeza de que deseja excluir esta atividade?</h3>

    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Detalhes da Atividade</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nome</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

                <dt class="col-sm-3">Período</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Periodo)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash"></i> Deletar
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</div>
