@model RotasParaOFuturo.Models.Atividade

@{
    ViewData["Title"] = "Editar Atividade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center"><i class="fas fa-edit"></i> Editar Atividade</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow mb-4" style="width: 100%; max-width: 600px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-tasks"></i> Detalhes da Atividade</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"><i class="fas fa-pencil-alt"></i> Nome da Atividade</label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome da atividade" required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descricao" class="control-label"><i class="fas fa-align-left"></i> Descrição</label>
                    <input asp-for="Descricao" class="form-control" placeholder="Descreva a atividade" required />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Periodo" class="form-label"><i class="bi bi-stopwatch"></i> Período</label>
                    @Html.DropDownList("Periodo", new SelectList(new List<SelectListItem>
                    {
                        new SelectListItem { Value = "1", Text = "Manhã" },
                        new SelectListItem { Value = "2", Text = "Tarde" },
                        new SelectListItem { Value = "3", Text = "Noite" }
                    }, "Value", "Text"), "Selecione o Período", new { @class = "form-select", required = "required" })
                    <span asp-validation-for="Periodo" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TotalAulas" class="control-label"><i class="fas fa-align-left"></i> Total de Aulas</label>
                    <input asp-for="TotalAulas" class="form-control" placeholder="Informe o Total de Aulas da Atividade" required />
                    <span asp-validation-for="TotalAulas" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Salvar</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Voltar à Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 10px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn {
        border-radius: 5px;
    }

    .btn-secondary {
        background-color: #6c757d;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>
