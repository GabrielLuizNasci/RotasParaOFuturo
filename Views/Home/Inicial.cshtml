    </div>
    <div class="card-item">
        <AuthorizeView Roles="Admin">
            <div class="card text-center">
                <div class="card-header">Parceiros</div>
                <div class="card-body">
                    <h5 class="card-title">Manutenção de dados de Parceiros</h5>
                    <a class="btn btn-primary" data-mdb-ripple-init asp-area="" asp-controller="Parceiros" asp-action="Index">
                        Acessar
                    </a>
                </div>
            </div>
        </AuthorizeView>
    </div>
</div>

<style>
    .card-container {
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        margin-top: 20px;
    }

    .card-item {
        width: 300px;
        max-width: 100%;
    }
</style>