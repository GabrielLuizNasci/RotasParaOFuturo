@model RotasParaOFuturo.Models.Matricula

@{
    ViewData["Title"] = "Adicionar Matrícula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-primary my-4"><i class="fas fa-user-plus"></i> Adicionar Matrícula</h1>

<div class="card mx-auto shadow-sm" style="max-width: 600px; border-radius: 10px;">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0"><i class="fas fa-plus-circle"></i> Cadastro de Matrícula</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Data de Matrícula -->
            <div class="mb-3">
                <label asp-for="DataMatricula" class="form-label fw-bold">
                    <i class="fas fa-calendar-alt"></i> Data de Matrícula
                </label>
                <input asp-for="DataMatricula" type="date" class="form-control" required />
                <span asp-validation-for="DataMatricula" class="text-danger"></span>
            </div>

            <!-- Aluno -->
            <div class="mb-3">
                <label asp-for="alunoID" class="form-label fw-bold">
                    <i class="fas fa-user"></i> Aluno
                </label>
                <select asp-for="alunoID" class="form-control" asp-items="ViewBag.alunoID" required>
                    <option value="">Selecione um aluno</option>
                </select>
                <span asp-validation-for="alunoID" class="text-danger"></span>
            </div>

            <!-- RA -->
            <div class="mb-3">
                <label asp-for="RA" class="form-label fw-bold">
                    <i class="fas fa-id-card"></i> RA
                </label>
                <input asp-for="RA" class="form-control" placeholder="Digite o RA" required />
                <span asp-validation-for="RA" class="text-danger"></span>
            </div>

            <!-- Turma -->
            <div class="mb-3">
                <label asp-for="turmaID" class="form-label fw-bold">
                    <i class="fas fa-users"></i> Turma
                </label>
                <select asp-for="turmaID" class="form-control" asp-items="ViewBag.turmaID" required>
                    <option value="">Selecione uma turma</option>
                </select>
                <span asp-validation-for="turmaID" class="text-danger"></span>
            </div>

            <!-- Botões -->
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-danger">
                    <i class="fas fa-arrow-left"></i> Voltar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMN8P4pHBz8TbARdI6IiE88BLb91xTJXWvknk+E" crossorigin="anonymous"></script>
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
