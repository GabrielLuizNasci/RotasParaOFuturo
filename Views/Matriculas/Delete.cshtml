@model RotasParaOFuturo.Models.Matricula

@{
    ViewData["Title"] = "Excluir Matrícula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1 class="text-center text-danger mb-4"><i class="bi bi-trash3-fill"></i> Excluir Matrícula</h1>

    <h3 class="text-center mb-3">Tem certeza de que deseja excluir esta matrícula?</h3>

    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0"><i class="bi bi-info-circle-fill"></i> Detalhes da Matrícula</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataMatricula)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DataMatricula)</dd>

                <dt class="col-sm-3">CPF do Aluno</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.aluno.CPF)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RA)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RA)</dd>

                <dt class="col-sm-3">Descrição da Turma</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.turma.descricao)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg">
                <i class="bi bi-trash3"></i> Confirmar Exclusão
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg ml-3">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
}
