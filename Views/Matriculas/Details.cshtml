@model RotasParaOFuturo.Models.Matricula

@{
    ViewData["Title"] = "Detalhes da Matrícula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-primary mb-4"><i class="bi bi-journal-text"></i> Detalhes da Matrícula</h1>

<div class="container">
    <div class="row g-4">
        <!-- Data de Matrícula -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-calendar-check"></i> Data de Matrícula</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.DataMatricula)</p>
                </div>
            </div>
        </div>

        <!-- CPF do Aluno -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-person-vcard"></i> Nome do Aluno</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.aluno.Nome)</p>
                </div>
            </div>
        </div>

        <!-- RA -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-hash"></i> RA</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.RA)</p>
                </div>
            </div>
        </div>

        <!-- Turma -->
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-people"></i> Turma</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.turma.descricao)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Botões -->
    <div class="mt-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success me-2">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-danger">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
}
