@model RotasParaOFuturo.Models.Matricula

@{
    ViewData["Title"] = "Editar Matrícula";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="mb-4 text-center"><i class="fas fa-edit"></i> Editar Matrícula</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow mb-4" style="width: 100%; max-width: 600px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-book"></i> Informações da Matrícula</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="DataMatricula" class="control-label"><i class="fas fa-calendar-alt"></i> Data de Matrícula</label>
                    <input asp-for="DataMatricula" type="date" class="form-control" required />
                    <span asp-validation-for="DataMatricula" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="alunoID" class="control-label"><i class="fas fa-user"></i> Aluno</label>
                    <select asp-for="alunoID" class="form-control" asp-items="ViewBag.alunoID" required>
                        <option value="">Selecione o aluno</option>
                    </select>
                    <span asp-validation-for="alunoID" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RA" class="control-label"><i class="fas fa-id-badge"></i> RA</label>
                    <input asp-for="RA" class="form-control" placeholder="Digite o RA" required />
                    <span asp-validation-for="RA" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="turmaID" class="control-label"><i class="fas fa-users"></i> Turma</label>
                    <select asp-for="turmaID" class="form-control" asp-items="ViewBag.turmaID" required>
                        <option value="">Selecione a turma</option>
                    </select>
                    <span asp-validation-for="turmaID" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Salvar</button>
                    <a asp-action="Index" class="btn btn-danger"><i class="fas fa-arrow-left"></i> Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 10px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn {
        border-radius: 5px;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>
