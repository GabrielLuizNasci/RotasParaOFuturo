@model RotasParaOFuturo.Models.Responsavel

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Detalhes do Responsável</h1>
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Informações do Responsável</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Nome:</div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.nome)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Aniversário:</div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.aniversario)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">CPF:</div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.cpf)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">RG:</div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.rg)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Telefone:</div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.tel)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Profissão:</div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.profissao)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Renda:</div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.renda)</div>
            </div>
            <div class="row mb-3">
                <div class="col-sm-4 font-weight-bold">Local:</div>
                <div class="col-sm-8">@Html.DisplayFor(model => model.local)</div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-end">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success mr-2">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-danger">
                <i class="fas fa-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>
