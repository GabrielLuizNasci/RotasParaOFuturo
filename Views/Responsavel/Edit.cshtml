@model RotasParaOFuturo.Models.Responsavel

@{
    ViewData["Title"] = "Editar Responsável";
}

<h1 class="mb-4 text-center"><i class="fas fa-user-edit"></i> Editar Responsável</h1>

<div class="d-flex justify-content-center">
    <div class="card shadow mb-4" style="width: 100%; max-width: 600px;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0"><i class="fas fa-info-circle"></i> Informações do Responsável</h4>
        </div>

        <div class="card-body">
            <form asp-action="Edit" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Nome -->
                <div class="form-group">
                    <label asp-for="nome" class="control-label"><i class="fas fa-user"></i> Nome Completo</label>
                    <input asp-for="nome" class="form-control" placeholder="Digite o nome" required />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <!-- Data de Aniversário -->
                <div class="form-group">
                    <label asp-for="aniversario" class="control-label"><i class="fas fa-calendar-alt"></i> Data de Aniversário</label>
                    <input asp-for="aniversario" class="form-control" type="date" required />
                    <span asp-validation-for="aniversario" class="text-danger"></span>
                </div>

                <div class="row">
                    <!-- CPF -->
                    <div class="col-md-6 form-group">
                        <label asp-for="cpf" class="control-label"><i class="fas fa-id-card"></i> CPF</label>
                        <input asp-for="cpf" class="form-control" placeholder="Digite o CPF" required />
                        <span asp-validation-for="cpf" class="text-danger"></span>
                    </div>

                    <!-- RG -->
                    <div class="col-md-6 form-group">
                        <label asp-for="rg" class="control-label"><i class="fas fa-id-badge"></i> RG</label>
                        <input asp-for="rg" class="form-control" placeholder="Digite o RG" required />
                        <span asp-validation-for="rg" class="text-danger"></span>
                    </div>
                </div>

                <!-- Telefone -->
                <div class="form-group">
                    <label asp-for="tel" class="control-label"><i class="fas fa-phone"></i> Telefone</label>
                    <input asp-for="tel" class="form-control" placeholder="Digite o telefone" required />
                    <span asp-validation-for="tel" class="text-danger"></span>
                </div>

                <!-- Profissão -->
                <div class="form-group">
                    <label asp-for="profissao" class="control-label"><i class="fas fa-briefcase"></i> Profissão</label>
                    <input asp-for="profissao" class="form-control" placeholder="Digite a profissão" required />
                    <span asp-validation-for="profissao" class="text-danger"></span>
                </div>

                <div class="row">
                    <!-- Renda -->
                    <div class="col-md-6 form-group">
                        <label asp-for="renda" class="control-label"><i class="fas fa-money-bill-alt"></i> Renda</label>
                        <input asp-for="renda" class="form-control" placeholder="Digite a renda mensal" required />
                        <span asp-validation-for="renda" class="text-danger"></span>
                    </div>

                    <!-- Local de Trabalho -->
                    <div class="col-md-6 form-group">
                        <label asp-for="local" class="control-label"><i class="fas fa-map-marker-alt"></i> Local de Trabalho</label>
                        <input asp-for="local" class="form-control" placeholder="Digite o local de trabalho" required />
                        <span asp-validation-for="local" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botões -->
                <div class="form-group d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Salvar</button>
                    <a asp-action="Index" class="btn btn-danger"><i class="fas fa-arrow-left"></i> Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .card {
        border-radius: 10px;
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn {
        border-radius: 5px;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-success {
        background-color: #28a745;
    }

    .text-danger {
        font-size: 0.9rem;
    }
</style>
