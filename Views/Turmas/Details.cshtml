@model RotasParaOFuturo.Models.Turma

@{
    ViewData["Title"] = "Detalhes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-4">Detalhes da Turma</h1>

<div class="container">
    <div class="row g-4">
        <!-- Descrição -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-pencil-square"></i> Descrição</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.descricao)</p>
                </div>
            </div>
        </div>

        <!-- Período -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-clock"></i> Período</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.periodo)</p>
                </div>
            </div>
        </div>

        <!-- Atividade -->
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-activity"></i> Atividade</h5>
                    <p class="card-text">@Html.DisplayFor(model => model.atividade.Nome)</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Botões de Ação -->
    <div class="mt-4 text-end">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-success me-2">
            <i class="bi bi-pencil-square"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-danger">
            <i class="bi bi-arrow-left"></i> Voltar à Lista
        </a>
    </div>
</div>
