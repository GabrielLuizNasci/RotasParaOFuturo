@model RotasParaOFuturo.Models.Visita

@{
    ViewData["Title"] = "Excluir Visita";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h1 class="text-center text-danger mb-4"><i class="bi bi-exclamation-triangle-fill"></i> Excluir Visita</h1>

    <h3 class="text-center mb-3">Tem certeza de que deseja excluir esta visita?</h3>

    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Detalhes da Visita</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <!-- Responsável -->
                <dt class="col-sm-3">Responsável</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.responsavel.nome)</dd>

                <!-- Data da Visita -->
                <dt class="col-sm-3">Data da Visita</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.datavisita)</dd>

                <!-- Descrição -->
                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.descricao)</dd>

                <!-- Status -->
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StatusFormatado)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger btn-lg"><i class="bi bi-trash-fill"></i> Deletar</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary btn-lg ml-3"><i class="bi bi-arrow-left"></i> Voltar</a>
    </div>
</div>
